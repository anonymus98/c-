
#include <iostream>
#include <cstdlib>

#define MAX 20

using namespace std;
struct queue {
	int data[MAX];
	int awal, akhir;
	int tanda;

} antrean;

void init(){
	antrean.awal= -1;
	antrean.akhir= -1;

}

bool full(){
	if(antrean.akhir== MAX-1) {

		return true;

	} else {
		return false;
	}

}

bool empty(){
	if(antrean.akhir == -1){
		return true;
	} else {
		return false;
	}
}

void tampilData(){
	int i;

	if(!empty()){
			for(i=antrean.awal; i<antrean.akhir; i++){
				cout<<antrean.data[i]<<" ";
			}
		}

		cout<<"\n";
	}

void inQueue(){

	int elemen;
		if(!full()){
			cout<<"Data yang akan dimasukkan : ";
			cin>>elemen;
			cout<<"Data berhasil ditambahkan!\n\n";

			antrean.data[antrean.akhir]=elemen;
			antrean.akhir++;
		} else {
			cout<<"\n Queue penuh!\n";
		}
	getchar();
}


void deQueue(){
	int i;
	tampilData();

	if(!empty()){
		cout<<"\nMengambil data \" "<<antrean.data[antrean.awal]<<"\" ..."<<endl;

		for(i=antrean.awal; i<antrean.akhir; i++) {
			antrean.data[i]=antrean.data[i+1];
		}
			antrean.akhir--;
		} else {
			cout<<"antrean kosong";
		}

		getchar();
}

void clear() {
	antrean.awal = -1;
		antrean.akhir = -1;
	}

void cari(int c){
	int tanda = -1;
	for(int i = 0 ;i<20;i++) {
		if(c == antrean.data[i]) {
			tanda = i;
		}
	}

	if(tanda !=-1) {
		cout<<"Selamat! data anda berada di antrean \n\n\n";
	} else {
	 	cout<<"Maaf! data yang anda cari tidak ada di dalam queue\n\n\n";
	}
}

void sorting(){
	
}
