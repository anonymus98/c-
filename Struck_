void keluar(){

}

int main(){
	int pilihan, elemen;
	init();
	cout<<"\n\nDemo Queue dengan Linear Array"<<endl;
	do{
		cout<<"\nData anda :";
		tampilData();
		cout<<"Menu Utama Anda!\n";
		cout<<"==================";
		cout<<"\n [1] Init \n [2] InQueue \n [3] Dequeue \n [4] Clear \n [5] Cari data \n [6] Click to sort! \n [7] keluar \n";
		cout<<"==================";
		cout<<"\nMasukkan pilihan ";cin>>pilihan;
		switch(pilihan) {
			case 1: init(); break;
			case 2: inQueue(); break;
			case 3: deQueue(); break;
			case 4: clear(); break;
			case 5:
				int c;
				cout<<"\nMasukan data yang dicari : ";
				cin>>c;
				cari(c);break;
			case 6:sorting();break;
			}
		}
		while(pilihan!=0);
	return 0;
}
